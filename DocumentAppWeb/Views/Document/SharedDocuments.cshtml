@model IEnumerable<DocumentAppWeb.Models.ListItemVM>

@{
    ViewBag.Title = "Shared Documents";
}

<div class="panel panel-default">
    <div>
        <div class="panel-heading clearfix">
            <h3 class="panel-title pull-left">Shared Documents</h3>
            @using (Html.BeginForm("Search", "Document", FormMethod.Get, new { @class = "navbar-form pull-right" }))
            {
                <div class="input-group">
                    <input type="hidden" name="SPHostUrl" value="@ViewBag.SPHostUrl" />
                    <input type="hidden" name="libraryTitle" value="@ViewBag.LibraryTitle" />
                    <input type="text" class="form-control" placeholder="Find a file" name="searchString" />
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            }
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Author)</th>
                        <th>@Html.DisplayNameFor(model => model.ModifiedBy)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                        <th>@Html.DisplayNameFor(model => model.ModifiedDate)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @Html.Partial("ListItem", item)
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>